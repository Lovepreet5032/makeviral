<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
      android:background="@color/black"
    tools:context="com.prouman.contactmanager.ContactDetail"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layout_back_to_guest"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorAccent"
        android:layout_alignParentLeft="true">

        <ImageView
            android:id="@+id/layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_keyboard_arrow_left_white_24dp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:text="Contacts"
            android:layout_marginLeft="8dp"
            android:textColor="@color/text_color_white"
            android:layout_toRightOf="@+id/layout_logo"
            />
        <!--   <ImageView
               android:id="@+id/menu_icon_iv"
               android:layout_width="50dp"
               android:layout_height="wrap_content"
               android:gravity="center"
               android:padding="2.0dip"
               android:layout_alignParentRight="true"
               android:src="@drawable/ic_drawer_icon"
               />-->

    </RelativeLayout>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="vertical"
      android:background="@color/black"
    >
    <ImageView
        android:id="@+id/img_picture"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginBottom="8dp"/>
<TextView
    android:id="@+id/txt_fname_lname"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="8dp"
    android:textColor="@color/text_sendsms"
    android:background="@color/white80"/>
    <TextView
        android:id="@+id/txt_date_created"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/text_sendsms"
        android:padding="20dp"
        android:background="@color/white80"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/><TextView
    android:id="@+id/txt_city"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="8dp"
    android:background="@color/white80"
    android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_zip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:textColor="@color/text_sendsms"
        android:background="@color/white80"
        />
    <TextView
        android:id="@+id/txt_country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
    <TextView
        android:id="@+id/txt_sourcetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white80"
        android:textColor="@color/text_sendsms"/>
</LinearLayout>
</ScrollView>
</LinearLayout>
